<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anima_ergo_bearer_landscape"
    tools:context="com.noeselmastersonlosdados.sliferdragon.penandpapercompanion.AnimaBeyondFantasy.ABFTools">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/CharGen"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:onClick="goto_CharGenMenu"
                android:text="@string/character_generator"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/gaiaButton"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:text="@string/ga_a"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/BeastButton"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:text="@string/bestiary"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/CombTools"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:onClick="goto_CombatMenu"
                android:text="@string/combat_tools"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/DiceRoller"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:text="@string/dice_roller"
                android:textColor="@android:color/holo_red_dark"
                android:textIsSelectable="false" />

            <Button
                android:id="@+id/ClassAdd"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:text="@string/add_classes"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/RaceAdd"
                style="@style/Base.Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:text="@string/add_races"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
